<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="sync_customer">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to sync customer to Api ?</message>
                        <title translate="true">Sync Customers With Api</title>
                    </confirm>
                    <url path="tecno/customers/send"/>
                    <type>sync_customer</type>
                    <label translate="true">Sync Customers With Api</label>
                </settings>
            </action>
        </massaction>
     </listingToolbar>
</listing>
